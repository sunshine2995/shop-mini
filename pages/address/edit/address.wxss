.address-container,
.address-content,
.address_input {
  display: flex;
  /* align-items: center; */
}

.address-container {
  margin: 0 20rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #f4f4f3;
}

.address-manage-icon {
  position: relative;
  width: 50px;
  top: 50%;
  left: 50%;
  height: 50px;
  margin-top: -25px;
  margin-left: -25px;
  display: flex;
}

.img {
  width: 50px;
  height: 50px;
  margin: 5px auto;
}

.address-content {
  width: 35%;
  flex-shrink: 0;
}

.address-sign {
  color: #fe3059;
}

.address-label {
  color: #666;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.placeholder {
  font-size: 26rpx;
  color: #b3b3b3;
}

.address_input {
  flex: 1;
}

radio {
  transform: scale(0.7);
}

label {
  display: flex;
  color: #666;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.picker {
  font-size: 30rpx;
  color: #666;
}

textarea {
  width: 100%;
  cursor: auto;
  height: 130rpx;
  display: block;
  position: relative;
}

.address-button {
  width: 88%;
  margin: 60rpx auto;
}

.address-property {
  display: flex;
  padding: 0 15rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.address-type {
  margin: 15rpx;
}

.type,
.address-type-active {
  font-size: 30rpx;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
  box-sizing: border-box;
}

.address-type-active {
  border: 1px solid #11a24a;
  background-color: #11a24a;
  color: #fff;
}

.type {
  border: 1px solid #147f28;
  background-color: #fff;
  color: #147f28;
}

checkbox {
  margin-left: 10rpx;
}

/*checkbox 选项框大小  */

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}

/*checkbox选中后样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #11a24a;
  border: 1px solid #11a24a;
}

/*checkbox选中后图标样式  */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
