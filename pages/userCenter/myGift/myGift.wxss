/* pages/userCenter/myGift/myGift.wxss */

.MyGift {
  background-color: #f0f0f0;
  min-height: 100vh;
  padding-top: 1rpx;
  box-sizing: border-box;
}

.invalid-gift {
  margin: 20rpx 20rpx 0;
}

.invalid-goods {
  position: relative;
  display: flex;
  background-color: #fff;
  padding: 20rpx 20rpx 20rpx 0;
  border-top: 1px solid #f4f4f3;
  margin: 10rpx 0;
}

.gift-img {
  width: 160rpx;
  margin: 0 20rpx;
}

.activity_name {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.gift-detail {
  flex: 1;
}

.gift-name {
  overflow: hidden;
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
  max-height: 80rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.gift-type {
  display: block;
  font-size: 30rpx;
  color: #666;
  line-height: 50rpx;
}

.gift-desc {
  display: block;
  font-size: 30rpx;
  color: #999;
  line-height: 50rpx;
}

.empty {
  color: #666;
  padding: 150rpx 0;
  text-align: center;
}
