.customer-service-container {
  min-height: 100vh;
  text-align: center;
  background-color: #31ac47;
  background: linear-gradient(#11a24a 70%, #56b743 85%);
  background: -webkit-linear-gradient(#11a24a 70%, #56b743 85%);
  background: -o-linear-gradient(#11a24a 70%, #56b743 85%);
  color: #fff;
}
.wx-content {
  padding: 150rpx 10rpx 60rpx;
  box-sizing: border-box;
}
.wx-qr {
  width: 70%;
  margin: 36rpx auto;
}
.tip {
  font-size: 45rpx;
  line-height: 1;
}
.service-title {
  font-size: 40rpx;
}
.service-time {
  font-size: 30rpx;
}
.phone-service {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: #4a4c5b;
  font-size: 36rpx;
  color: #fff;
  padding: 26rpx;
  box-sizing: border-box;
}
