/* components/bind/bind.wxss */
.cancel {
  text-align: right;
}

.icon-cancel {
  font-size: 50rpx;
}

.connect-tip {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  color: #666;
  margin-bottom: 20rpx;
}

.get-code {
  display: flex;
  align-items: center;
}

.input-number {
  color: #666;
  border: 2rpx solid #e6e6e6;
  border-radius: 10rpx;
  margin: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.get-code-btn {
  height: 60rpx;
  line-height: 60rpx;
  /* background-color: #6de2bb; */
  background-color: #179b16;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.get-code-btn.disabled {
  width: 130rpx;
  background-color: #999;
}

.placeholder {
  font-size: 26rpx;
  color: #b3b3b3;
}
.ok {
  margin-top: 60rpx;
}
.with-click {
  display: flex;
  margin: 30rpx 0;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #11a24a;
  border: 1px solid #11a24a;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}