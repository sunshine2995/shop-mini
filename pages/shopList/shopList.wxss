.ShopListContainer {
  background-color: #e6e6e6;
  height: 100vh;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.choose-tips {
  text-align: center;
  font-size: 34rpx;
  color: #11a24a;
  padding: 10rpx 20rpx 0;
  box-sizing: border-box;
}

.shop-list {
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.shop-image {
  position: relative;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 20;
}

.shop-img {
  display: block;
  width: 100%;
  height: auto;
}

.shop-name-distance,
.shop-time,
.shop-address {
  padding: 5rpx 30rpx;
  box-sizing: border-box;
}

.shop-name-distance {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
}

.shop-distance {
  font-size: 30rpx;
  color: #666;
}

.shop-time {
  font-size: 30rpx;
  color: #666;
}

.shop-address {
  font-size: 28rpx;
  color: #666;
}
