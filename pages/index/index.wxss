/**index.wxss**/

.IndexContainer {
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.apply-for-info {
  width: 88%;
  margin: auto;
  padding: 50rpx 0;
  box-sizing: border-box;
  border-top: 1px solid #e6e6e6;
}

.usermotto {
  text-align: center;
  margin-bottom: 50rpx;
  color: #11a24a;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.apply-for,
.get-user-info {
  font-size: 35rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.apply-for {
  color: #000;
}

.get-user-info {
  color: #999;
}

.authorize {
  width: 88%;
  border-radius: 80rpx;
  margin: 50rpx;
  font-size: 35rpx;
}
