/* pages/activity/prepaidGift/prepaidGift.wxss */

.recharge-gift-image {
  background-color: #6a38cc;
  position: relative;
}

.recharge-gift-img {
  display: block;
  width: 100%;
  height: auto;
}

.no-gift-tip {
  position: absolute;
  top: 52%;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  margin: auto;
}

.recharge-button-image {
  position: absolute;
  top: 55%;
  left: 0;
  right: 0;
  text-align: center;
}

.rule-text {
  width: 80%;
  position: absolute;
  top: 75%;
  left: 0;
  right: 0;
  margin: auto;
}

.rule-text text {
  text-align: left;
  font-size: 30rpx;
  font-weight: bold;
  color: #6a38cc;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.4;
}

.title {
  font-size: 32rpx;
  color: #666;
  text-align: left;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.rule {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.rule text {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  line-height: 1.5;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.title text {
  font-size: 28rpx;
  line-height: 1.5;
}
.recharge-gift-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: 1px solid #e6e6e6;
  margin: 0 20rpx;
}
.gift-info {
  width: 45%;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.gift-img {
  width: 150rpx;
  height: 150rpx;
}
.gift-name {
  font-size: 30rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.gift-remainder {
  font-size: 30rpx;
  color: #999;
}
