.tab-content {
  height: 433rpx;
}

.avatar {
  text-align: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  margin: auto;
}

.avatar-img {
  width: 88%;
  height: auto;
}

.recharge-gift {
  padding: 26rpx;
  box-sizing: border-box;
}

.gift-title {
  font-size: 36rpx;
}

.gift-tip {
  font-size: 28rpx;
  color: #11a24a;
  padding: 30rpx 0 0;
  box-sizing: border-box;
}

.pay-type,
.explain-container {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.pay-type {
  padding-bottom: 30rpx;
  box-sizing: border-box;
  margin: 0 30rpx;
  border-bottom: 1px solid #e6e6e6;
}

.icon-help-desc {
  color: #999;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.wx-pay {
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 60rpx;
}

.icon-wxPay {
  font-size: 60rpx;
  color: #11a24a;
}

.desc {
  flex: 1;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #11a24a;
  border: 1px solid #11a24a;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.desc-explain {
  font-size: 24rpx;
  color: #999;
}

.gift-content {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}

.radio-group {
  width: 100%;
  display: flex;
  text-align: center;
  padding: 0 10px;
  box-sizing: border-box;
}
.gift-list {
  width: 33%;
  flex-shrink: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

radio {
  text-align: center;
  transform: scale(0.7);
}

.goods-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.pay-for {
  width: 88%;
  background-color: #4a4c5b;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  padding: 26rpx;
  box-sizing: border-box;
  margin: auto;
  border-radius: 60rpx;
}

.curtain-explain {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 220;
  width: 100%;
  padding: 80rpx 80rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.explain-title {
  text-align: center;
  font-size: 45rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.explain-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.ok {
  width: 88%;
  line-height: 1;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin: 40rpx auto;
}
