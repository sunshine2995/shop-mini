.exchange-container {
  padding: 20rpx;
  box-sizing: border-box;
}

.exchange-container.tip {
  padding-top: 85rpx;
}

.tip-mobile {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  font-size: 28rpx;
  z-index: 100;
  background-color: #b3b3b3;
  padding: 10rpx 30rpx 20rpx;
  box-sizing: border-box;
}

.mobile-container {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 220;
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.exchange-title {
  font-size: 36rpx;
  color: #999;
  margin: 20rpx;
}

.placeholder {
  font-size: 26rpx;
  color: #b3b3b3;
}

.input-number {
  color: #666;
  border: 2rpx solid #f4f4f3;
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.submit-exchange {
  margin: 120rpx 20rpx;
}

.button-hover {
  color: rgba(255, 255, 255, 0.6);
  background-color: #11a24a;
}
