/* pages/cart/cart.wxss */

.CartContainer {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.delete {
  padding: 0 20rpx;
  background: #fff;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.activity-image, .empty-image {
  padding: 20rpx;
  box-sizing: border-box;
  margin: auto;
}

.empty-image {
  position: relative;
  text-align: center;
}

.activity-img {
  width: 100%;
  margin: auto;
}

.empty-img {
  width: 80%;
}

/* 空页面的样式 */

.go-shopping {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  width: 60%;
  margin: 20rpx auto;
}

.guess-title {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.guess-container {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  /* background-color: #f0f0f0; */
  flex-wrap: wrap;
  /* border-top: 3px solid #f0f0f0; */
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.guess-content {
  background-color: #fff;
  width: 47%;
  height: 425rpx;
  border: 1px solid #f0f0f0;
  border-radius: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin: 10rpx;
}

.guess-image {
  width: 100%;
  text-align: center;
  height: 245rpx;
}

.guess-img {
  display: block;
  width: 88%;
  height: 245rpx;
  margin: auto;
  border-radius: 20rpx;
}

.guess-goods-name {
  text-align: left;
  font-size: 34rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.guess-goods-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-cart-num {
  position: relative;
}

.icon-sort-add {
  font-size: 60rpx;
  color: #11a24a;
}

.cart-num {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: -20rpx;
  right: -15rpx;
  background-color: #fe3059;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  border: 1px solid #fff;
  padding: 10rpx;
  box-sizing: border-box;
}

.text-color {
  color: #fe3059;
}

.activity-new-user {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
.activity-new-user-img {
  display: block;
  width: 100%;
}


/* 不为空的样式 */

.header_text {
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 0 6rpx;
  color: #999;
}

.icon-delete {
  font-size: 45rpx;
  color: #666;
}

.check_img {
  width: 38rpx;
  height: 38rpx;
  margin-top: 26rpx;
}

.icon-selected {
  color: #11a24a;
}

.num_change {
  display: flex;
  align-items: flex-end;
  padding-top: 11rpx;
}

.shop_num {
  /* line-height: 52rpx; *//* height: 52rpx; */
  width: 60rpx;
  text-align: center;
  font-size: 32rpx;
}

.icon-sort-add {
  line-height: 1;
  font-size: 40rpx;
  color: #11a24a;
}

.icon-jianhao {
  line-height: 1;
  font-size: 38rpx;
  color: #999;
}

.main {
  flex: 1;
  overflow: auto; /* winphone8和android4+ */
  -webkit-overflow-scrolling: touch; /* ios5+ */
}

.shop {
  background: #fff;
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  border-bottom: 1px solid #efefef;
}

.shop_check_box {
  margin-top: 45rpx;
}

.shop_img {
  width: 180rpx;
  height: 180rpx;
  margin: 0 20rpx;
}

.shop_detail {
  flex: 1;
}

.shop_name {
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
  max-height: 80rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.shop_type {
  display: block;
  font-size: 26rpx;
  color: #ccc;
  line-height: 50rpx;
}

.shop_detail_bottom {
  display: flex;
}

.shop_price {
  line-height: 50rpx;
  flex: 1;
}

.add_icon, .minus_icon {
  width: 38rpx;
  height: 38rpx;
}

.price-container {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.total-original, .discount-total, .weight-total {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #666;
  padding: 30rpx 0;
  box-sizing: border-box;
  margin: 0 20rpx;
  border-bottom: 1px solid #f4f4f3;
}

.discount-total {
  color: #fe3059;
}

.weight-price {
  font-weight: bold;
}

.bottom-cart {
  background-color: #4a4c5b;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: fixed;
  bottom: 0;
  right: 0;
}

.cart-icon {
  flex: 1;
  background-color: #4a4c5b;
}

.check_box {
  display: flex;
  align-items: flex-end;
  font-size: 30rpx;
  margin-right: 30rpx;
}

.icon-Unselected, .icon-selected {
  line-height: 1;
  margin: 0 15rpx;
}

.cart-text {
  width: 260rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  height: 100rpx;
}

.footer_total_text {
  font-size: 28rpx;
}

.footer_total_price {
  font-size: 30rpx;
}

.cart-text-green {
  background-color: #11a24a;
}

.cart-text-gray {
  background-color: #b3b3b3;
}
