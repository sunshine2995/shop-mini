module.exports = {
  logType: function(type) {
    switch (+type) {
      case 1:
        return "充值";
      case 2:
        return "微信支付";
      case 3:
        return "现金红包";
      case 4:
        return "领取红包";
      case 5:
        return "使用红包";
      case 6:
        return "开通/续费会员";
      case 7:
        return "领取一个月免费会员";
      case 8:
        return "使用激活码";
      case 9:
        return "同步余额";
      case 10:
        return "订单退款";
      case 22:
        return "余额支付";
      case 61:
        return "领取充值赠礼";
      case 62:
        return "领取新人赠礼";
      case 63:
        return "领取分享充值送赠礼";
      default:
        return '其他';
    }
  },

  addressType: function(type) {
    switch (+type) {
      case 1:
        return "家";
      case 2:
        return "单位";
      case 3:
        return "朋友家";
      case 4:
        return "父母家";
      default:
        return "其他";
    }
  },

  numToFixed: function(num, digits = 2) {
    if (typeof num !== 'number') {
      num = Number(num)
    }
    return num.toFixed(digits)
  },

  showAddress: function(province, city, area) {
    if (province === city) {
      return city + ' ' + area;
    } else {
      return province + ' ' + city + ' ' + area;
    }
  },

  //地址拼接
  addressToName: function (address) {
    if (address.buyer_province === address.buyer_city) {
      return address.buyer_city + address.buyer_district + address.buyer_address;
    } else {
      return address.buyer_province + address.buyer_city + address.buyer_district + address.buyer_address;
    }
  },
 
  // 时间格式化
  formatTime: function(date) {
    var formatNumber = function(n) {
      n = n.toString()
      return n[1] ? n : '0' + n
    };
    var date = getDate(date);
    var year = date.getFullYear();
    var month = date.getMonth() + 1;
    var day = date.getDate();
    var hour = date.getHours();
    var minute = date.getMinutes();
    var second = date.getSeconds();
    return [year, month, day].map(formatNumber).join('-') + ' ' + [hour, minute, second].map(formatNumber).join(':')
  },

  // 时间格式化只有日期
  formatData: function (date) {
    var formatNumber = function (n) {
      n = n.toString()
      return n[1] ? n : '0' + n
    };
    var date = getDate(date);
    var year = date.getFullYear();
    var month = date.getMonth() + 1;
    var day = date.getDate();
    var hour = date.getHours();
    var minute = date.getMinutes();
    var second = date.getSeconds();
    return [year, month, day].map(formatNumber).join('-')
  },



  dateFormat: function(strDate, format = "yyyy-MM-dd hh:mm:ss") {
    // 解决ios出现NaN问题
    var realDate = strDate ? getDate(strDate.replace(getRegExp('-', 'g'), '/')) : getDate();
    var regYear = getRegExp("(y+)", "i");
    var date = [
      ["M+", realDate.getMonth() + 1],
      ["d+", realDate.getDate()],
      ["h+", realDate.getHours()],
      ["m+", realDate.getMinutes()],
      ["s+", realDate.getSeconds()],
      ["q+", Math.floor((realDate.getMonth() + 3) / 3)],
      ["S+", realDate.getMilliseconds()],
    ];
    var reg1 = regYear.exec(format);
    if (reg1) {
      format = format.replace(reg1[1], (realDate.getFullYear() + '').substring(4 - reg1[1].length));
    }
    for (var i = 0; i < date.length; i++) {
      var reg2 = getRegExp("(" + date[i][0] + ")").exec(format);
      if (reg2) {
        format = format.replace(reg2[1], reg2[1].length == 1 ? v : ("00" + date[i][1]).substring(("" + date[i][1]).length));
      }
    }
    return format;
  }

}