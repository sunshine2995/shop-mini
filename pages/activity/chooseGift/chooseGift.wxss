.ChooseGift {
  background-color: #f0f0f0;
  min-height: 100vh;
  padding-top: 1rpx;
  box-sizing: border-box;
}
.invalid-gift {
  background-color: #fff;
  margin: 20rpx 20rpx 0;
}

.clear-invalid {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #999;
  padding: 20rpx;
  box-sizing: border-box;
}

.invaild-title {
  flex: 1;
}

.invalid-goods {
  position: relative;
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  border-top: 1px solid #f4f4f3;
}

.gift-img {
  width: 160rpx;
  margin: 0 20rpx;
}

.gift-detail {
  flex: 1;
}

.gift-name {
  overflow: hidden;
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
  max-height: 80rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.gift-type {
  display: block;
  font-size: 30rpx;
  line-height: 50rpx;
}
