/* pages/goodsSearch/goodsSearch.wxss */

.search-input {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.text-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  border: 2rpx solid #d6d6d6;
  border-radius: 40rpx;
  padding: 15rpx;
  box-sizing: border-box;
}

.icon-cancel {
  text-align: right;
  width: 15%;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

input {
  flex: 1;
  height: 25rpx;
  font-size: 30rpx;
  color: #666;
}

.placeholder {
  font-size: 26rpx;
  color: #b3b3b3;
}

.icon-search {
  font-size: 55rpx;
  color: #11a24a;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.history-keywords {
  padding: 20rpx 0 40rpx;
  box-sizing: border-box;
  margin: 0 30rpx;
  border-bottom: 2rpx solid #e6e6e6;
}

.histort-title {
  font-size: 40rpx;
  color: #666;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.recommend-part .histort-title {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.keywords-record {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.keywords {
  min-width: 28%;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  padding: 10rpx;
  box-sizing: border-box;
  border: 2rpx solid #e6e6e6;
  border-radius: 10rpx;
  margin: 20rpx 30rpx 0 0;
}

.empty-tip {
  text-align: center;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.goods-detail-content {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
  box-sizing: border-box;
  margin: 0 20rpx;
  border-bottom: 1px solid #f4f4f3;
}

.goods-image {
  width: 26%;
}

.goods-img {
  width: 100%;
}

.goods-detail {
  flex: 1;
  padding: 0 8rpx 0 18rpx;
  box-sizing: border-box;
}

.goods-name {
  display: block;
  font-size: 30rpx;
  color: #666;
}

.icon-shichengjiesuan-1 {
  display: block;
  font-size: 50rpx;
  color: #11a24a;
  line-height: 1;
}

.goods-advertising {
  display: block;
  font-size: 36rpx;
  color: #999;
}

.different-price {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}

.goods-different-price {
  width: 60%;
  border-right: 1rpx solid #e6e6e6;
}

.goods-remarks {
  flex: 1;
  padding: 0 8rpx;
  box-sizing: border-box;
  margin: 5rpx 0;
}

.goods-price-text, .goods-price-text-line, .goods-price-standard,
.goods-price-remark {
  font-size: 26rpx;
  color: #999;
}

.goods-price-text-line {
  text-decoration: line-through;
}

.text-color {
  color: #fe3059;
}

.recommend-container {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background-color: #f0f0f0;
  flex-wrap: wrap;
  border-top: 3px solid #f0f0f0;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.recommend-content {
  background-color: #fff;
  width: 50%;
  border: 2px solid #f0f0f0;
  border-radius: 15rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 5rpx;
}

.recommended-image {
  text-align: center;
}

.recommend-img {
  display: block;
  width: 88%;
}

.recommended-goods-name {
  text-align: left;
  font-size: 34rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.recommended-goods-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.icon-sort-add {
  font-size: 55rpx;
  color: #11A24A;
}