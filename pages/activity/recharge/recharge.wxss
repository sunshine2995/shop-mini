/* pages/recharge/recharge.wxss */

.RechargeContainer {
  min-height: 100vh;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

.RechargeContainer.tip {
  padding-top: 85rpx;
}

.tip-mobile {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  font-size: 28rpx;
  z-index: 100;
  background-color: #b3b3b3;
  padding: 10rpx 30rpx 20rpx;
  box-sizing: border-box;
}

.mobile-container {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 220;
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.money-tab {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
}

.tab-item {
  display: inline-block;
  margin: 15rpx;
  border: 1px solid #11a24a;
  color: #11a24a;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  border-radius: 32rpx;
}

.tab-item.active {
  /* position: relative; */
  border: 1px solid #fe3059;
  color: #fe3059;
}

