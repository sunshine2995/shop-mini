.ShareContainer {
  min-height: 100vh;
  background-color: #161619;
}

.share-gift-image {
  position: relative;
}

.share-gift-img {
  display: block;
  width: 100%;
  height: auto;
}

.share-button-image,
.recharge-button-image,
.describe {
  position: absolute;
  padding: 20rpx;
  box-sizing: border-box;
}

.share-button-image,
.recharge-button-image {
  width: 50%;
  left: 10%;
}

.share-button-image {
  top: 47%;
}

.recharge-button-image {
  top: 60%;
}

.share-button-img {
  width: 80%;
  height: 50.69px;
}
.button-hover {
  color: unset;
  background-color: unset;
}
.share-button {
  padding: unset;
  text-align: left;
  color: unset;
  background-color: unset;
  line-height: 1;
}

.share-user-button {
  padding: unset;
  color: unset;
  background-color: unset;
  line-height: 1;
}

button::after {
  border: unset;
}

.describe {
  left: 3%;
  top: 75%;
  color: #e8b11d;
}

.describe-title {
  font-size: 36rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.rule-text {
  background-color: #524734;
  border: 1px solid #e8b11d;
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

.rule-text text {
  text-align: left;
  font-size: 30rpx;
  line-height: 1.4;
}

.task {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.task-share {
  display: flex;
  background-color: #524734;
  border: 1px solid #e8b11d;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
}

.task-create {
  justify-content: center;
  text-align: center;
  font-size: 36rpx;
  padding: 60rpx 0;
  box-sizing: border-box;
}

.task-create text {
  display: block;
  background-color: #fff;
  color: #e8b11d;
  font-weight: bold;
  border: 1px solid #e8b11d;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.finished-task {
  margin-bottom: 50rpx;
}
.task-title {
  font-size: 36rpx;
  color: #e8b11d;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.receive-reward,
.reward-status {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.reward-status {
  color: #fff;
}

.receive-reward text {
  width: fit-content;
  color: #11a24a;
  line-height: 1;
  border: 1px solid #11a24a;
  border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.share_user_info {
  width: 30%;
  flex: 1;
  text-align: center;
}

.user-image {
  width: 130rpx;
  height: 130rpx;
  flex-shrink: 0;
  border-radius: 50%;
}

.user-name {
  display: block;
  line-height: 1;
  max-width: 98%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #e8b11d;
  padding: 12rpx 0;
  box-sizing: border-box;
}
